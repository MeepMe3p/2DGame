                <Font name="System Bold Italic" size="26.0" />
            </font>
        </Button>
      <Button fx:id="btn_chat" layoutX="100.0" layoutY="425.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="400.0" styleClass="button-background" stylesheets="@../css/Sign_Up.css" text="Chat">
